#!/bin/bash
set -e -o pipefail

test -d /var/log/nginx || mkdir -p /var/log/nginx
dockerize -template "/etc/conf-templates/nginx.conf:/etc/nginx/nginx.conf"

echo "Starting nginx ..."

if [[ $# -eq 0 ]] ; then
    exec /usr/sbin/nginx -g 'daemon off;' -c /etc/nginx/nginx.conf
else
    exec /usr/sbin/nginx "$@"
fi
