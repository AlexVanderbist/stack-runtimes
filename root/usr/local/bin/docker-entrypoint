#!/bin/bash
set -e -o pipefail

# fix /www permissions
rm -rf '/www/lost+found'
chown www-data:www-data /www || true  # do our best to set permissions unless we are on a RO filesystem

for d in root upgrade uploads plugins mu-plugins languages themes ; do
    chown www-data:www-data "/content/wp-content/$d" || true  # do our best to set permissions unless we are on a RO filesystem
done

exec "$@"
