set -e
set -o pipefail

RCLONE_STREAM="${MEDIA_BUCKET/:\/\//:}"
BUCKET_PREFIX="${MEDIA_BUCKET_PREFIX#"/"}"
BUCKET_PREFIX="${BUCKET_PREFIX%"/"}"

if [ -n "${BUCKET_PREFIX}" ] ; then
    RCLONE_STREAM="${RCLONE_STREAM}/${BUCKET_PREFIX}"
fi

exec /usr/local/bin/rclone --config /usr/local/docker/etc/rclone.conf serve ftp -v \
    --vfs-cache-max-age 30s --vfs-cache-mode full \
    --vfs-cache-poll-interval 0 --poll-interval 0 \
    "${RCLONE_STREAM}"
